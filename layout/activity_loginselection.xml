<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".LoginSelectionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="32dp"
        android:text="DREAM CITY"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginSelectionActivity"
        tools:layout_editor_absoluteX="-27dp"
        tools:layout_editor_absoluteY="32dp">

        <TextView
            android:id="@+id/LOGIN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="70dp"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="@color/black"
            android:textSize="45dp" />

        <Button
            android:id="@+id/USER"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/LOGIN"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="36dp"
            android:background="#E6F1EE"
            android:gravity="center"
            android:hint="USER"
            android:padding="2dp"
            android:textAllCaps="false"
            android:textColorHint="@color/black"
            android:textSize="35dp" />


        <Button
            android:id="@+id/SERVICEWORKER"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/USER"
            android:layout_marginStart="38dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="36dp"
            android:background="#E6F1EE"
            android:gravity="center"
            android:hint="SERVICE WORKER"
            android:padding="2dp"
            android:textAllCaps="false"
            android:textColorHint="@color/black"
            android:textSize="35dp" />

        <Button
            android:id="@+id/muncipality"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/SERVICEWORKER"
            android:layout_marginStart="38dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="36dp"
            android:background="#E6F1EE"
            android:gravity="center"
            android:hint="MUNCIPALITY"
            android:padding="2dp"
            android:textAllCaps="false"
            android:textColorHint="@color/black"
            android:textSize="35dp" />


    </RelativeLayout>

</RelativeLayout>