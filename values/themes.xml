<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Splash_Screen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Textsplash" parent="Widget.MaterialComponents.TextView">
        <item name="materialThemeOverlay">@style/textsplashOverlay</item>
    </style>

    <style name="textsplashOverlay">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_medium_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dwrHeadText" parent="Widget.MaterialComponents.TextView">
        <item name="materialThemeOverlay">@style/dwrHeadTextOverlay</item>
    </style>

    <style name="dwrHeadTextOverlay">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_header_16</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dwrDetailsTextAsh" parent="Widget.MaterialComponents.TextView">
        <item name="materialThemeOverlay">@style/dwrDetailsTextAshOverlay</item>
    </style>

    <style name="dwrDetailsTextAshOverlay">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_medium_12</item>
        <item name="android:textColor">@color/ash_txt</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="materialThemeOverlay">@style/buttonOverlay</item>
    </style>

    <style name="buttonOverlay">
        <item name="colorPrimary">@color/button_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_header_16</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="Textlabel_home" parent="Widget.MaterialComponents.TextView">
        <item name="materialThemeOverlay">@style/textlabelOverlay_home</item>
    </style>
    <style name="textlabelOverlay_home">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_medium_14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Textlabel_dashboard" parent="Widget.MaterialComponents.TextView">
        <item name="materialThemeOverlay">@style/textlabelOverlay_dashboard</item>
    </style>
    <style name="textlabelOverlay_dashboard">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_small_10</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>